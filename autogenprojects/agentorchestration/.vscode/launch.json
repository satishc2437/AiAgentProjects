{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET 8.0 Launch (console)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build", // This should match the label of a build task in tasks.json
            // Adjust the path to the output DLL as necessary
            "program": "${workspaceFolder}/App/bin/Debug/net8.0/App.dll",
            "args": [], // Add any arguments you need here
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            }
        }
    ]
}